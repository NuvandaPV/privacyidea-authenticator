<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/PIBLUE"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/PIBLUE"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.NoActionBar"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:popupTheme="@color/PIBLUE"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-47dp" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/PIBLUE"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:text="@string/name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

    <EditText
        android:id="@+id/editText_secret"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/PIBLUE"
        android:backgroundTintMode="src_in"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:selectAllOnFocus="true"
        android:text="@string/secret2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_name" />

    <CheckBox
        android:id="@+id/checkBox_base32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/base32_encoded_secret"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_secret" />

    <CheckBox
        android:id="@+id/checkBox_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="19dp"
        android:text="@string/with_pin"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_base32"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@color/PIBLUE"
        android:fadingEdge="horizontal|vertical"
        android:text="@string/add_button_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_algorithm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_type"
        android:layout_alignTop="@+id/spinner_algorithm"
        android:layout_marginStart="64dp"
        android:text="@string/algorithm"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_type"
        app:layout_constraintStart_toEndOf="@+id/textView_type" />

    <TextView
        android:id="@+id/textView_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_digits"
        android:layout_below="@+id/textView_digits"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/period"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_type" />

    <Spinner
        android:id="@+id/spinner_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinner_digits"
        android:layout_alignTop="@+id/textView_period"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_period" />

    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView_type"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_type" />

    <Spinner
        android:id="@+id/spinner_algorithm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinner_type"
        android:layout_below="@+id/spinner_type"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_algorithm"
        app:layout_constraintTop_toBottomOf="@+id/textView_algorithm" />

    <TextView
        android:id="@+id/textView_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/type"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_base32" />

    <TextView
        android:id="@+id/textView_digits"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/textView_algorithm"
        android:layout_centerVertical="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:text="@string/digits"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView_period"
        app:layout_constraintTop_toBottomOf="@+id/spinner_algorithm" />

    <Spinner
        android:id="@+id/spinner_digits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinner_algorithm"
        android:layout_alignTop="@+id/textView_digits"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_digits"
        app:layout_constraintTop_toBottomOf="@+id/textView_digits" />

</android.support.constraint.ConstraintLayout>